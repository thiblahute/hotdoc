{
    "app-id": "org.hotdoc.Hotdoc",
    "version": "master",
    "runtime": "org.freedesktop.Sdk",
    "runtime-version": "1.2",
    "finish-args": ["--command=hotdoc",
                    "--talk-name=ca.desrt.dconf",
                    "--filesystem=home"
                    ],
    "sdk": "org.freedesktop.Sdk",
    "strip": false,
    "build-options" : {
        "cflags": "-O2 -g",
        "cxxflags": "-O2 -g",
        "env": {
          "PYTHON": "python2"
        }
    },
    "modules": [
        {
            "name": "libgit2",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/libgit2/libgit2.git",
                    "branch": "v0.23.4"
                },
                {
                    "type": "file",
                    "path": "libgit2-configure",
                    "dest-filename": "configure"
                }
            ]
        },
        {
            "name": "graphviz",
            "sources": [
                {
                    "type": "archive",
                    "url": "http://graphviz.org/pub/graphviz/stable/SOURCES/graphviz-2.38.0.tar.gz",
                    "sha256": "81aa238d9d4a010afa73a9d2a704fc3221c731e1e06577c2ab3496bdef67859e"
                }
            ]
        },
        {
            "name": "hotdoc",
            "build-options" : {
              "build-args": ["--share=network"]
            },
            "sources": [
                {
                    "type": "file",
                    "path": "hotdoc-configure",
                    "dest-filename": "configure"
                }
            ]
        },
        {
            "name": "hotdoc_c_extension",
            "build-options" : {
              "build-args": ["--share=network"]
            },
            "sources": [
            {
                "type": "git",
                "url": "https://github.com/thiblahute/hotdoc_c_extension.git",
                "branch": "xdgapp"
            },
            {
                "type": "file",
                "path": "hotdoc-c-extension-configure",
                "dest-filename": "configure"
            }
            ]
        },
        {
            "name": "hotdoc_gi_extension",
            "build-options" : {
              "build-args": ["--share=network"]
            },
            "sources": [
                {
                    "type": "file",
                    "path": "hotdoc-gi-extension-configure",
                    "dest-filename": "configure"
                }
            ]
        },
        {
            "name": "hotdoc_search_extension",
            "build-options" : {
              "build-args": ["--share=network"]
            },
            "sources": [
                {
                    "type": "file",
                    "path": "hotdoc-search-extension-configure",
                    "dest-filename": "configure"
                }
            ]
        },
        {
            "name": "hotdoc_tag_extension",
            "build-options" : {
              "build-args": ["--share=network"]
            },
            "sources": [
                {
                    "type": "file",
                    "path": "hotdoc-tag-extension-configure",
                    "dest-filename": "configure"
                }
            ]
        },
        {
            "name": "hotdoc_python_extension",
            "build-options" : {
              "build-args": ["--share=network"]
            },
            "sources": [
                {
                    "type": "file",
                    "path": "hotdoc-python-extension-configure",
                    "dest-filename": "configure"
                }
            ]
        }
    ]
}
